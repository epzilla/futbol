.big-box-score {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  font-size: 1.25rem;
  position: relative;
  border: 3px solid #EFEFEF;
  border-top: none;

  &:last-child {
    border-bottom: none;
  }

  .date-span {
    position: absolute;
    left: 1rem;
  }

  .team-block {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-grow: 1;
    width: 50%;
    padding: 0 2rem;

    &:first-of-type {
      justify-content: flex-end;
    }

    * {
      color: white;
      text-transform: uppercase;
    }
  }

  .separator-left,
  .separator-right {
    display: block;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: calc(50px + 2rem) calc(50px + 2rem) 0 0;
    position: absolute;
    left: calc(50% - 2.5rem);
  }

  .separator-right {
    border-width: 0 0 calc(50px + 2rem) calc(50px + 2rem);
  }

  .team-badge {
    width: 50px;
    height: 50px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    margin: 1rem;
  }

  .score-line {
    position: absolute;
    z-index: 1;

    &.score-line-1 {
      left: calc(50% - 2rem);
    }

    &.score-line-2 {
      left: calc(50% + 1rem);
    }
  }
}