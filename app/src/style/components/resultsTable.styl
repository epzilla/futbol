.stats-table {
  display: flex;
  flex-direction: column;
  justify-content: top;
  border: 1px solid #CCC;

  .stats-table-row {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 0 1rem;
    font-size: 1.25rem;
    position: relative;
    border: 1px solid #CCC;
    border-top: none;

    &:last-child {
      border-bottom: none;
    }

    .date-span {
      position: absolute;
      right: 1rem;
    }

    .team-block {
      display: flex;
      justify-content: flex-start;
      align-items: center;
      flex-grow: 1;
      width: 40%;

      &:first-child {
        justify-content: flex-end;
      }
    }

    .team-badge {
      width: 50px;
      height: 50px;
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
      margin: 1rem;
    }

    .score-line {
      flex-shrink: 0;

      * {
        margin: 0 0.5rem;
      }
    }
  }
}